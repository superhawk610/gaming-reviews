doctype html
html
  head
    title Manage | Files
    include includes/head.pug
    link(rel='stylesheet', href='css/files.css')
    if select
      link(rel='stylesheet', href='css/popup.css')
    
  body
    include includes/nav.pug
    #page-wrapper
      #content-wrapper(class=select ? 'popup' : '')
        .columns(style='margin-bottom: 0')
          .column
            h1.title.is-pulled-left= select ? 'Select a File' : 'Manage Files'
          .column
            unless select
              a.is-pulled-right(href='manage')
                span.icon
                  i.fa.fa-chevron-left(style='font-size: 14px')
                | back to manage
            else
              a.is-pulled-right(href='#', onclick='window.close()')
                span.icon
                  i.fa.fa-chevron-left(style='font-size: 14px')
                | cancel

        .columns
          .column(style='padding-top: 0')
            h2.subtitle.is-pulled-left= '/' + directory
          .column(style='padding-top: 0')
            unless select
              button.button.is-primary.is-pulled-right.upload-file Upload
        
        ul#files-list
          each f in files
            li.content-box
              img.preview(src=directory + '/' + f)
              div= f
      
    include includes/foot.pug
