doctype html
html
  head
    title Sample Article
    include includes/head.pug
    link(href='/css/article.css', rel='stylesheet')
    
  body
    include includes/nav.pug
    #page-wrapper
      #content-wrapper
        .article
          .article-content
            .article-header
              .header-flair
                img(src='/img/game/' + article.games[0].image)
              .header-text
                h1.title= article.title
                h2.subtitle= article.subtitle
                h5= 'Written by: ' + article.authors.map((x) => { return x.name }).join(', ')
            hr
            div!= article.content
            hr(style='width: 300px')
            p= article.authors.map((x) => { return x.name }).join(', ')
          .article-sidebar
            h2.subtitle You Might Like
            ul
              li Thing 1
              li Thing 2
              li Thing 3
          
      nav.breadcrumb
        ul
          li
            a(href='/home')
              span.icon.is-small
                i.fa.fa-home
          li
            a(href='#') Articles
          li.is-active
            a(href='#')= article.title
    include includes/foot.pug
